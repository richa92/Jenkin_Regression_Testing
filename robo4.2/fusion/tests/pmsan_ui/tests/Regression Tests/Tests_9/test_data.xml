<data>
	<!-- The Environment to setup the system -->
	<environment_configuration>
		<env seleniumSpeed="0.1" applianceIP="https://siddvenk.vse.adapps.hp.com" browser="chrome"/>
	</environment_configuration>

	<!-- The User who will log on to the appliance -->
	<users>
		<user name="Administrator" password="hpvse123"/>
	</users>

	<!-- The profile to be setup -->
	<profiles>
		<profile name="profile_with_3_connections" server="Encl1, bay 3" mac="Virtual" serial="Virtual" hardwaretype="BL460c Gen8 1" enclgroup="group_1">
			<connection name="PrimaryConnection" type="Fibre Channel" network="direct_network_1" portName="Auto" boot="Not bootable"/>
			<connection name="SecondaryConnection" type="Fibre Channel" network="direct_network_2" portName="Auto" boot="Not bootable"/>
			<connection name="TertiaryConnection" type="Fibre Channel" network="fabric_network_1" portName="None" boot="Not bootable"/>
			<sanstorage sanvolume="NewVolume1" san="true" volumetype="New volume" sanlun="10" storagepool="FST_CPG1" ostype="Windows 2012 / WS2012 R2" capacity="100" provisioning="Thin" permanent="False">
				<connection name="direct_network_1"/>
				<connection name="direct_network_2"/>
				<connection name="fabric_network_1"/>
			</sanstorage>
		</profile>
	</profiles>

	<!-- Volumes after creation -->
	<volumes_1>
		<volume name="NewVolume1" lun="10" storagepool="FST_CPG1" size="100" provisioning='Thin' permanent="no" sharing="private">
			<connection name="direct_network_1" type="direct attach" enabled="yes"/>
			<connection name="direct_network_2" type="direct attach" enabled="yes"/>
			<connection name="fabric_network_1" type="fabric attach" enabled="no port">
				<port target="pending assignment"/>
			</connection>
		</volume>
	</volumes_1>

	<!-- Edit profile configuration -->
	<editprofiles>
		<editprofile name="profile_with_3_connections">
			<sanstorage sanvolume="NewVolume1" san="true" modification="edit">
				<connection name="fabric_network_1" edit="">
					<port target="20:00:00:02:AC:00:08:FF" enabled=""></port>
				</connection>
			</sanstorage>
		</editprofile>
	</editprofiles>

	<!-- Volumes after edit -->
	<volumes_2>
		<volume name="NewVolume1" lun="10" storagepool="FST_CPG1" size="100" provisioning="Thin" permanent="no" sharing="private">
			<connection name="direct_network_1" type="direct attach" enabled="yes"/>
			<connection name="direct_network_2" type="direct attach" enabled="yes"/>
			<connection name="fabric_network_1" type="fabric attach" enabled="no port">
				<port target="20:00:00:02:AC:00:08:FF" group="auto"/>
			</connection>
		</volume>
	</volumes_2>

	<!-- Profiles to delete -->
	<deleteprofiles>
		<deleteprofile name="profile_with_3_connections" nonpermanentvolume=""/>
	</deleteprofiles>
</data>