<data>
	<!-- The Environment to setup the system -->
	<environment_configuration>
		<env seleniumSpeed="0.1" applianceIP="https://siddvenk.vse.adapps.hp.com" browser="chrome"/>
	</environment_configuration>

	<!-- The User who will log on to the appliance -->
	<users>
		<user name="Administrator" password="hpvse123"/>
	</users>

	<!-- Volumes to add initially -->
	<!-- Storage Volumes -->
	<storagevolume>
		<volume name="ExistingVolume1" desc="" poolname="FST_CPG2" provisioning="Full" reqcapacity="10" sharing="shared" reqdtemplatevolumecreation="" />
		<volume name="ExistingVolume2" desc="" poolname="FST_CPG1" provisioning="Thin" reqcapacity="34" sharing="private" reqdtemplatevolumecreation="" />
	</storagevolume>

	<!-- The profile to be setup -->
	<profiles>
		<profile name="professor_profile" server="Encl1, bay 4" mac="Virtual" serial="Virtual" hardwaretype="BL460c Gen8 1" enclgroup="group_1">
			<!-- Connections for profile -->
			<connection name="PrimaryConnection" network="fabric_network_1" type="Fibre Channel"/>
			<connection name="SecondaryConnection" network="direct_network_2" type="Fibre Channel"/>
			<sanstorage sanvolume="ExistingVolume1" san="true" volumetype="Existing volume" storagepool="FST_CPG2" sanlun="" capacity="10" provisioning="Full" sharing="shared">
				<!-- Connections for volume -->
				<connection name="fabric_network_1"/>
				<connection name="direct_network_2"/>
			</sanstorage>
			<sanstorage sanvolume="NewVolume1" san="true" volumetype="New volume" storagepool="FST_CPG1" sanlun="" capacity="1" provisioning="thin" sharing="private" permanent="False" ostype="Windows 2012 / WS2012 R2">
				<connection name="fabric_network_1"/>
			</sanstorage>
			<sanstorage sanvolume="ExistingVolume2" san="true" volumetype="Existing volume" storagepool="FST_CPG1" sanlun="" capacity="34" provisioning="Thin" sharing="private">
				<connection/>
			</sanstorage>
			<sanstorage sanvolume="NewVolume2" san="true" volumetype="New volume" storagepool="FST_CPG1" sanlun="" capacity="400" provisioning="Full" sharing="private" permanent="False" ostype="Windows 2012 / WS2012 R2">
				<connection name="direct_network_2"/>
			</sanstorage>
		</profile>
	</profiles>

	<!-- Edit configuration for previous profile -->
	<editprofiles>
		<editprofile name="professor_profile">
			<sanstorage sanvolume="ExistingVolume1" san="true" modification="edit">
				<connection name="fabric_network_1" edit="">
					<port target="20:00:00:02:AC:00:08:FF" enabled=""></port>
					<port target="20:00:00:02:AC:00:09:03" enabled=""></port>
				</connection>
				<connection name="direct_network_2" edit="disable"/>
			</sanstorage>
			<sanstorage sanvolume="NewVolume1" san="true" modification="edit">
				<connection name="fabric_network_1" edit="">
					<port target="20:00:00:02:AC:00:09:03" enabled=""></port>
					<port target="20:00:00:02:AC:00:08:FF" disabled=""></port>
				</connection>
				<connection name="direct_network_2" edit="Add">
				</connection>
			</sanstorage>
			<sanstorage sanvolume="ExistingVolume2" san="true" modification="edit">
				<connection name="fabric_network_1" edit="Add">
					<port target="20:00:00:02:AC:00:08:FF" disabled=""></port>
					<port target="20:00:00:02:AC:00:09:03" disabled=""></port>
				</connection>
			</sanstorage>
			<sanstorage sanvolume="NewVolume2" san="true" modification="edit">
				<connection name="direct_network_2" edit="disable"/>
			</sanstorage>
		</editprofile>
	</editprofiles>

	<!-- Volumes after profile edit -->
	<volumes>
		<volume name="ExistingVolume1" storagepool="FST_CPG2" lun="" size="10" provisioning="Full" sharing="shared" permanent="Yes">
			<connection name="fabric_network_1" type="fabric attach" enabled="Yes">
				<port target="20:00:00:02:AC:00:08:FF" group="auto"></port>
				<port target="20:00:00:02:AC:00:09:03" group="auto"></port>
			</connection>
			<connection name="direct_network_2" type="direct attach" enabled="No"/>
		</volume>
		<volume name="NewVolume1" storagepool="FST_CPG1" lun="" size="1" provisioning="Thin" sharing="private" permanent="No">
			<connection name="fabric_network_1" type="fabric attach" enabled="yes">
				<port target="20:00:00:02:AC:00:09:03" group="auto"/>
			</connection>
			<connection name="direct_network_2" type="direct attach" enabled="yes"/>
		</volume>
		<volume name="ExistingVolume2" storagepool="FST_CPG1" lun="" size="34" provisioning="thin" sharing="private" permanent="yes">
			<connection name="fabric_network_1" type="fabric attach" enabled="yes"/>
		</volume>
		<volume name="NewVolume2" storagepool="FST_CPG1" lun="" size="400" provisioning="Full" sharing="private" permanent="no">
			<connection name="direct_network_2" type="direct attach" enabled="no"/>
		</volume>
	</volumes>

	<!-- Profiles to delete -->
	<deleteprofiles>
		<deleteprofile name="professor_profile" nonpermanentvolume=""/>
	</deleteprofiles>

	<!-- Volumes page after delete -->
	<volumesafterdelete>
		<volume name="ExistingVolume1" remain=""/>
		<volume name="NewVolume1" deleted=""/>
		<volume name="ExistingVolume2" remain=""/>
		<volume name="NewVolume2" deleted=""/>
	</volumesafterdelete>
</data>