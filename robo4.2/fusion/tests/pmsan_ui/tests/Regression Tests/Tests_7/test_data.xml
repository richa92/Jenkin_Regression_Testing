<data>
	<!-- The Environment to setup the system -->
	<environment_configuration>
		<env seleniumSpeed="0.1" applianceIP="https://siddvenk.vse.adapps.hp.com" browser="chrome"/>
	</environment_configuration>

	<!-- The User who will log on to the appliance -->
	<users>
		<user name="Administrator" password="hpvse123"/>
	</users>

	<!-- Profile setup configuration -->
	<profiles>
		<profile name="lun_swap_test" server="Encl1, bay 4" mac="Virtual" serial="Virtual" hardwaretype="BL460c Gen8 1" enclgroup="group_1">
			<!-- Connections to add -->
			<connection name="PrimaryConnection" network="direct_network_1" type="Fibre Channel"/>
			<connection name="SecondaryConnection" network="direct_network_2" type="Fibre Channel"/>
			<!-- Storage voluems to add -->
			<sanstorage sanvolume="volume1" san="true" volumetype="New volume" storagepool="FST_CPG1" sanlun="0" provisioning="Full" capacity="10" permanent="False" ostype="Windows 2012 / WS2012 R2">
				<connection name="direct_network_1"/>
				<connection name="direct_network_2"/>
			</sanstorage>
			<sanstorage sanvolume="volume2" san="true" volumetype="New volume" storagepool="FST_CPG1" sanlun="1" provisioning="Full" capacity="10" permanent="False" ostype="Windows 2012 / WS2012 R2">
				<connection name="direct_network_1"/>
				<connection name="direct_network_2"/>
			</sanstorage>
		</profile>
	</profiles>

	<!-- Volumes after creation -->
	<firstvolumes>
		<volume name="volume1" storagepool="FST_CPG1" lun="0" provisioning="Full" size="10" permanent="No" sharing="private">
			<connection name="direct_network_1" type="direct attach" enabled="yes"/>
			<connection name="direct_network_2" type="direct attach" enabled="yes"/>
		</volume>
		<volume name="volume2" storagepool="FST_CPG1" lun="1" provisioning="Full" size="10" permanent="No" sharing="private">
			<connection name="direct_network_1" type="direct attach" enabled="yes"/>
			<connection name="direct_network_2" type="direct attach" enabled="yes"/>
		</volume>
	</firstvolumes>

	<!-- Edit profile configuration -->
	<editprofiles>
		<editprofile name="lun_swap_test">
			<sanstorage sanvolume="volume1" san="true" modification="lunswap" sanlun="1"/>
			<sanstorage sanvolume="volume2" san="true" modification="edit" sanlun="0"/>
		</editprofile>
	</editprofiles>

	<!-- Volumes after edit -->
	<secondvolumes>
		<volume name="volume1" storagepool="FST_CPG1" lun="1" provisioning="Full" size="10" permanent="No" sharing="private">
			<connection name="direct_network_1" type="direct attach" enabled="yes"/>
			<connection name="direct_network_2" type="direct attach" enabled="yes"/>
		</volume>
		<volume name="volume2" storagepool="FST_CPG1" lun="0" provisioning="Full" size="10" permanent="No" sharing="private">
			<connection name="direct_network_1" type="direct attach" enabled="yes"/>
			<connection name="direct_network_2" type="direct attach" enabled="yes"/>
		</volume>
	</secondvolumes>

	<!-- Profile to delete -->
	<deleteprofiles>
		<deleteprofile name="lun_swap_test" nonpermanentvolume=""/>
	</deleteprofiles>
</data>