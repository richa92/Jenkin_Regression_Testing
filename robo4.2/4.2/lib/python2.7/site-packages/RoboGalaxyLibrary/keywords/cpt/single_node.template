<CONFIGS>
    <CONFIG>
        <OS>{{ os_name }}</OS>
        <OS_PATH>{{ os_repo }}</OS_PATH>
        <NODES>
            <NODE>
                {% if host -%}
                    <HOSTNAME>{{ host.name }}</HOSTNAME>
                    <SYSTEM_PASSWORD>{{ host.password }}</SYSTEM_PASSWORD>
                {%- endif %}
                <KICKSTART>{{ kickstart }}</KICKSTART>
                <CUSTOM_SCRIPT>{{ custom_script }}</CUSTOM_SCRIPT>
                {% if ilo -%}
                    <ILO>
                        <IP>{{ ilo.ip }}</IP>
                        <USER>{{ ilo.user }}</USER>
                        <PWD>{{ ilo.password }}</PWD>
                    </ILO>
                {%- endif %}
                {% if network -%}
                    <MACADDR>{{ network.mac }}</MACADDR>
                    <NIC_ID>>{{ network.pos }}</NIC_ID>
                    <NIC_DD_PATH>{{ network.drivers }}</NIC_DD_PATH>
                {%- endif %}
                <BOOTMODE>{{ boot_mode }}</BOOTMODE>
                {% if storage -%}
                    {% if storage.multipath -%}
                        <MULTIPATH>yes</MULTIPATH>
                    {% else %}
                        <MULTIPATH>no</MULTIPATH>
                    {%- endif %}
                    <LUN_ID>{{ storage.lun_id }}</LUN_ID>
                    {% if storage.fcoe -%}
                        {% if storage.fcoe.enabled -%}
                            <FCOE>
                                <INSTALL>yes</INSTALL>
                                <MAC1>{{ storage.fcoe.mac1 }}</MAC1>
                                <MAC2>{{ storage.fcoe.mac2 }}</MAC2>
                            </FCOE>
                        {%- endif %}
                    {%- endif %}
                <STG_DD_PATH>{{ storage.drivers }}</STG_DD_PATH>
                {%- endif %}
                <SPP>
                    <FLASH_FIRMWARE>no</FLASH_FIRMWARE>
                    {% if spp -%}
                      <INSTALL>yes</INSTALL>
                      <ISO_PATH>{{ spp }}</ISO_PATH>
                    {% else %}
                      <INSTALL>no</INSTALL>
                      <ISO_PATH />
                    {%- endif %}
                </SPP>
                <SYSBUILDER>
                    <INSTALL>no</INSTALL>
                    <SITE_LOCATION />
                    <CORP_NIC_ID />
                </SYSBUILDER>
                <KISO_PATH />
                <TEAM>CSI-Other</TEAM>
            </NODE>
        </NODES>
    </CONFIG>
</CONFIGS>